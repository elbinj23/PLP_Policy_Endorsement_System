<Window x:Class="PolicyEndorsementManagement.ViewPolicyDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolicyEndorsementManagement"
        mc:Ignorable="d"
        Title="ViewPolicyDetails" Height="600" Width="800">
    <Grid>

        <Grid.Background>

            <ImageBrush ImageSource="Images/image1.jpg"/>
        </Grid.Background>
        <Button x:Name="btn_viewAdminDetails" Content="View Details" Background="CadetBlue" HorizontalAlignment="Left" Margin="112,170,0,0" VerticalAlignment="Top" Width="177" Height="48" FontSize="20" Click="View_customers_btn"/>
        <Button Content="View Documents" Background="CadetBlue" HorizontalAlignment="Left" Margin="460,170,0,0" VerticalAlignment="Top" Width="172" Height="48" FontSize="20" Click="ViewDocuments_btn"/>
